<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurfaceContainer">

    <com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="2dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Estado del partido -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EN VIVO"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="?attr/colorPrimary"
            android:layout_gravity="center_horizontal" />

        <View
            android:id="@+id/statusBar"
            android:layout_width="90dp"
            android:layout_height="4dp"
            android:background="?attr/colorPrimary"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:alpha="0.8"
            android:scaleX="1.2" />

        <!-- Equipos y resultado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Equipo local -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/local_team_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_no_image"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
                    android:contentDescription="Escudo equipo local" />

                <TextView
                    android:id="@+id/local_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equipo Local"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <!-- Resultado -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 - 0"
                    android:textSize="24sp"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/place"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_map"
                    android:contentDescription="UbicaciÃ³n" />
            </LinearLayout>

            <!-- Equipo visitante -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/visiting_team_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_no_image"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
                    android:contentDescription="Escudo equipo visitante" />

                <TextView
                    android:id="@+id/visiting_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equipo Visitante"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>

        <!-- Fecha y compartir -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunes 15"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21:00"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_share"
                app:tint="@color/md_theme_primary"
                android:contentDescription="Compartir" />
        </LinearLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_statistics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stats"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="16dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_lineup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lineups"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="16dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
