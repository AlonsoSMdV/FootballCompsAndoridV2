<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="64dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Imagen del usuario con botón para abrir la cámara -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/user_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_person_v2"
                    android:contentDescription="user_photo"
                    app:shapeAppearanceOverlay="@style/CircularImageView"
                    android:padding="8dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_open_camera"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:contentDescription="Abrir cámara"
                    app:backgroundTint="@color/md_theme_primary"
                    app:srcCompat="@drawable/ic_camera"
                    app:maxImageSize="24dp" />
            </FrameLayout>

            <!-- Título -->
            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Datos del usuario"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/material_on_surface_emphasis_high_type"
                android:textAlignment="center" />

            <!-- Campos del usuario -->
            <!-- Nombre -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/il_user_namet"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Nombre de usuario"
                app:startIconDrawable="@drawable/ic_user"
                app:startIconTint="@color/material_on_surface_emphasis_medium">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Apellido -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_user_surname"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Apellidos"
                app:startIconDrawable="@drawable/ic_user"
                app:startIconTint="@color/material_on_surface_emphasis_medium">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_user_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Correo electrónico"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="@color/material_on_surface_emphasis_medium">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Equipo favorito -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_user_team"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Equipo favorito"
                app:startIconDrawable="@drawable/ic_user"
                app:startIconTint="@color/material_on_surface_emphasis_medium">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Jugador favorito -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_user_player"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Jugador favorito"
                app:startIconDrawable="@drawable/ic_user"
                app:startIconTint="@color/material_on_surface_emphasis_medium">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Liga favorita -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_user_league"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Liga favorita"
                app:startIconDrawable="@drawable/ic_user"
                app:startIconTint="@color/material_on_surface_emphasis_medium">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_league"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón cerrar sesión -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Cerrar Sesión"
                android:textColor="@color/white"
                app:backgroundTint="@color/design_default_color_error"
                android:padding="12dp"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_logout"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Guardar Cambios"
                android:textColor="@color/white"
                app:backgroundTint="@color/md_theme_primary"
                android:padding="12dp"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_save"
                app:iconGravity="textStart" />

            <!-- Tema -->
            <LinearLayout
                android:id="@+id/prof_theme_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/prof_icon_day"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Tema claro"
                    android:src="@drawable/ic_day" />

                <Switch
                    android:id="@+id/prof_theme_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:checked="false" />

                <ImageView
                    android:id="@+id/prof_icon_night"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Tema oscuro"
                    android:src="@drawable/ic_night" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
